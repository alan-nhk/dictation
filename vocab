    <script>
        // é€™æ˜¯æ‚¨çš„ç”Ÿè©è³‡æ–™åº«ï¼Œå·²ç¶“å¹«æ‚¨åˆ†å¥½éŸ³ç¯€äº†
        const wordList = [
            { id: 1, text: "class-room", chinese: "æ•™å®¤ (classroom)", full: "classroom" },
            { id: 2, text: "mu-sic room", chinese: "éŸ³æ¨‚å®¤ (music room)", full: "music room" },
            { id: 3, text: "com-pu-ter room", chinese: "é›»è…¦å®¤ (computer room)", full: "computer room" },
            { id: 4, text: "art room", chinese: "ç¾è¡“å®¤ (art room)", full: "art room" },
            { id: 5, text: "li-bra-ry", chinese: "åœ–æ›¸é¤¨ (library)", full: "library" },
            { id: 6, text: "toi-lets", chinese: "å»æ‰€ (toilets)", full: "toilets" },
            { id: 7, text: "wash-rooms", chinese: "æ´—æ‰‹é–“ (washrooms)", full: "washrooms" },
            { id: 8, text: "lift", chinese: "é›»æ¢¯ (lift)", full: "lift" },
            { id: 9, text: "play-ground", chinese: "æ“å ´ (playground)", full: "playground" },
            { id: 10, text: "tuck shop", chinese: "å°è³£éƒ¨ (tuck shop)", full: "tuck shop" },
            { id: 11, text: "gar-den", chinese: "èŠ±åœ’ (garden)", full: "garden" },
            // åŠ ä¸€äº›å‹•ä½œ
            { id: 12, text: "have les-sons", chinese: "ä¸Šèª² (have lessons)", full: "have lessons" },
            { id: 13, text: "paint pic-tures", chinese: "ç•«ç•« (paint pictures)", full: "paint pictures" }
        ];

        let currentIndex = -1; // -1 è¡¨ç¤ºé‚„æ²’é–‹å§‹

        function nextWord() {
            currentIndex++;
            if (currentIndex >= wordList.length) {
                currentIndex = 0; // å¦‚æœåˆ°åº•äº†ï¼Œå›åˆ°ç¬¬ä¸€å€‹
            }
            updateDisplay();
            // è‡ªå‹•è®€å‡ºè²éŸ³ (éƒ¨åˆ†ç€è¦½å™¨å¯èƒ½é˜»æ“‹è‡ªå‹•æ’­æ”¾ï¼Œéœ€ä½¿ç”¨è€…å…ˆäº’å‹•é)
            setTimeout(speakCurrentWord, 500); 
        }

        function updateDisplay() {
            const wordData = wordList[currentIndex];
            const syllableBox = document.getElementById('syllableBox');
            const chineseText = document.getElementById('chineseText');
            const progressText = document.getElementById('progressText');

            // æ›´æ–°ä¸­æ–‡
            chineseText.innerText = wordData.chinese;

            // æ›´æ–°é€²åº¦
            progressText.innerText = `å–®å­— ${currentIndex + 1} / ${wordList.length}`;

            // æ¸…ç©ºèˆŠçš„éŸ³ç¯€
            syllableBox.innerHTML = '';

            // è™•ç†éŸ³ç¯€é¡¯ç¤º
            // æˆ‘å€‘ç”¨ç©ºæ ¼åˆ†é–‹å–®å­—ï¼Œç”¨ "-" åˆ†é–‹éŸ³ç¯€
            // ä¾‹å¦‚ "com-pu-ter room" -> å…ˆåˆ†é–‹æˆ ["com-pu-ter", "room"]
            const parts = wordData.text.split(' ');
            
            parts.forEach((part, partIndex) => {
                // å†æŠŠæ¯å€‹éƒ¨åˆ†åˆ‡æˆéŸ³ç¯€
                const syllables = part.split('-');
                
                syllables.forEach((syl) => {
                    const span = document.createElement('span');
                    span.className = 'syllable';
                    span.innerText = syl;
                    syllableBox.appendChild(span);
                });

                // å¦‚æœé€™ä¸æ˜¯æœ€å¾Œä¸€å€‹å–®å­—ï¼ŒåŠ ä¸€å€‹ç©ºæ ¼çš„åˆ†éš”ç¬¦ï¼ˆè¦–è¦ºä¸Šçš„ç©ºæ ¼ï¼‰
                if (partIndex < parts.length - 1) {
                    const space = document.createElement('span');
                    space.style.width = "20px"; // ç©ºæ ¼å¯¬åº¦
                    syllableBox.appendChild(space);
                }
            });
        }

        function speakCurrentWord() {
            if (currentIndex === -1) {
                nextWord();
                return;
            }

            const wordData = wordList[currentIndex];
            
            // ä½¿ç”¨ç€è¦½å™¨å…§å»ºèªéŸ³
            const utterance = new SpeechSynthesisUtterance(wordData.full);
            utterance.lang = 'en-US'; // è¨­å®šç‚ºç¾å¼è‹±æ–‡
            utterance.rate = 0.8;     // èªé€Ÿç¨å¾®æ”¾æ…¢ï¼Œé©åˆå°æœ‹å‹
            utterance.pitch = 1.1;    // èªèª¿ç¨å¾®æé«˜ä¸€é»é»ï¼Œæ¯”è¼ƒæ´»æ½‘
            
            // å˜—è©¦è§£æ±ºéƒ¨åˆ†ç€è¦½å™¨ç™¼éŸ³ä¸å‡ºä¾†çš„å•é¡Œ
            window.speechSynthesis.cancel(); 
            window.speechSynthesis.speak(utterance);

            // è¦–è¦ºå›é¥‹ï¼šè®“å¡ç‰‡ç¨å¾®è·³å‹•ä¸€ä¸‹
            const card = document.querySelector('.card');
            card.style.transform = "scale(1.02)";
            setTimeout(() => {
                card.style.transform = "scale(1)";
            }, 200);
        }

        // åˆå§‹åŒ–èªéŸ³åŠŸèƒ½ (è§£æ±ºæŸäº›ç€è¦½å™¨ç¬¬ä¸€æ¬¡æ²’è²éŸ³çš„å•é¡Œ)
        window.speechSynthesis.getVoices();
    </script>
