<body>

    <div class="card">
        <div class="definition" id="definition">å¯¦é©—</div>
        
        <div class="word-display" id="wordDisplay" onclick="speakWord()">
            </div>

        <div class="controls">
            <button class="btn-speak" onclick="speakWord()">ğŸ”Š è®€çµ¦æˆ‘è½</button>
            <button class="btn-next" onclick="nextWord()">ä¸‹ä¸€å€‹ â¡</button>
        </div>
    </div>

    <script>
        // 1. ç”Ÿè©è³‡æ–™åº«ï¼šåœ¨é€™è£¡è¼¸å…¥å–®å­—ï¼Œç”¨ "-" ä¾†åˆ†é–‹éŸ³ç¯€
        const vocabularyList = [
            { word: "ex-pe-ri-ment", meaning: "å¯¦é©— (experiment)" },
            { word: "class-room", meaning: "æ•™å®¤ (classroom)" },
            { word: "play-ground", meaning: "æ“å ´ (playground)" },
            { word: "com-pu-ter", meaning: "é›»è…¦ (computer)" },
            { word: "li-bra-ry", meaning: "åœ–æ›¸é¤¨ (library)" },
            { word: "wash-rooms", meaning: "æ´—æ‰‹é–“ (washrooms)" }
        ];

        let currentIndex = 0;

        function loadWord() {
            const currentData = vocabularyList[currentIndex];
            const displayDiv = document.getElementById('wordDisplay');
            const defDiv = document.getElementById('definition');

            // æ›´æ–°ä¸­æ–‡æ„æ€
            defDiv.innerText = currentData.meaning;

            // æ¸…ç©ºç›®å‰çš„é¡¯ç¤º
            displayDiv.innerHTML = '';

            // æ‹†è§£éŸ³ç¯€ä¸¦ç”¨ä¸åŒé¡è‰²é¡¯ç¤º
            const parts = currentData.word.split('-'); // æ ¹æ“š "-" åˆ‡å‰²
            
            parts.forEach(part => {
                const span = document.createElement('span');
                span.className = 'syllable';
                span.innerText = part;
                displayDiv.appendChild(span);
            });
        }

        function speakWord() {
            // è®€çš„æ™‚å€™æŠŠ "-" å»æ‰ï¼Œè®€å‡ºå®Œæ•´å–®å­—
            const rawWord = vocabularyList[currentIndex].word.replace(/-/g, '');
            
            const utterance = new SpeechSynthesisUtterance(rawWord);
            utterance.lang = 'en-US'; // è¨­å®šç¾å¼ç™¼éŸ³
            utterance.rate = 0.8;     // ç¨å¾®æ”¾æ…¢é€Ÿåº¦ï¼Œé©åˆå°æœ‹å‹
            window.speechSynthesis.speak(utterance);
        }

        function nextWord() {
            currentIndex++;
            if (currentIndex >= vocabularyList.length) {
                currentIndex = 0; // å¾ªç’°å›åˆ°ç¬¬ä¸€å€‹
            }
            loadWord();
        }

        // ç¶²é è¼‰å…¥æ™‚é¡¯ç¤ºç¬¬ä¸€å€‹å­—
        window.onload = loadWord;
    </script>
